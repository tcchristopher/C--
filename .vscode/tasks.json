{
    "version": "2.0.0",
    "tasks": [
        // ============= SFML Tasks =============
        {
            "type": "cppbuild",
            "label": "Build SFML",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-lsfml-network",
                "-Wl,-rpath,/opt/homebrew/lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build with SFML libraries"
        },
        {
            "label": "Run SFML",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "dependsOn": "Build SFML",
            "problemMatcher": [],
            "detail": "Build and run SFML program"
        },
        
        // ============= Regular C++ Tasks =============
        {
            "type": "cppbuild",
            "label": "Build C++",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build regular C++ (no SFML)"
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "dependsOn": "Build C++",
            "problemMatcher": [],
            "detail": "Build and run regular C++ program"
        },
        
        // ============= Utility Tasks =============
        {
            "label": "Run Without Building",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "problemMatcher": [],
            "detail": "Run already compiled program"
        },
        {
            "label": "Build C++ (with warnings)",
            "type": "cppbuild",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build with all warnings enabled"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${fileDirname}/${fileBasenameNoExtension}.dSYM"
            ],
            "problemMatcher": [],
            "detail": "Remove compiled executable"
        }
    ]
}