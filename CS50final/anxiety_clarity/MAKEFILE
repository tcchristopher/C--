# Makefile for Anxiety Clarity
# CS50x Final Project

# Compiler and flags
CXX = clang++
CXXFLAGS = -std=c++17 -Wall

# Target executable
TARGET = anxiety_clarity

# Source files
SOURCES = main.cpp \
          action_step.cpp \
          anxiety_item.cpp \
          anxiety_list.cpp \
          ui.cpp

# Object files (automatically generated from sources)
OBJECTS = $(SOURCES:.cpp=.o)

# Default target - build the program
all: $(TARGET)

# Link object files into executable
$(TARGET): $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJECTS)

# Compile .cpp files into .o files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean build artifacts
clean:
	rm -f $(OBJECTS) $(TARGET)

# Rebuild from scratch
rebuild: clean all

# Run the program
run: $(TARGET)
	./$(TARGET)

# Test build (compiles test.cpp instead of main.cpp)
test: action_step.o anxiety_item.o anxiety_list.o
	$(CXX) $(CXXFLAGS) -o test test.cpp action_step.o anxiety_item.o anxiety_list.o
	./test

# Clean test artifacts
clean-test:
	rm -f test test_data.txt

# Full clean (including test files)
clean-all: clean clean-test

# Phony targets (not actual files)
.PHONY: all clean rebuild run test clean-test clean-all
